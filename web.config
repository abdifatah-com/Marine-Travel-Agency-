<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <!-- Update Data Source to your actual SQL Server instance name -->
    <add name="MarineTravelDB" 
         connectionString="Data Source=HUNTER\ZEOS;Initial Catalog=MarineTravelDB;Integrated Security=True;" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>

  <appSettings>
    <add key="ValidationSettings:UnobtrusiveValidationMode" value="None" />
  </appSettings>

  <system.web>
    <compilation debug="true" targetFramework="4.8" />
    <httpRuntime targetFramework="4.8" />

    <!-- Authentication Configuration -->
    <authentication mode="Forms">
      <forms loginUrl="Login.aspx" timeout="2880" defaultUrl="Dashboard.aspx" />
    </authentication>

    <!-- Authorization: Deny anonymous users by default, allow on specific pages via location tags if needed -->
    <authorization>
      <deny users="?" />
    </authorization>

    <!-- Session Configuration -->
    <sessionState mode="InProc" timeout="20" />

    <customErrors mode="Off" defaultRedirect="Error.aspx" />
  </system.web>

  <!-- Allow access to static resources like CSS/JS -->
  <location path="assets">
    <system.web>
      <authorization>
        <allow users="*" />
      </authorization>
    </system.web>
  </location>

  <location path="Register.aspx">
    <system.web>
      <authorization>
        <allow users="*" />
      </authorization>
    </system.web>
  </location>

</configuration>
